<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Distributor Management Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Setups <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Companies", "Index", "Manufacturers")</li>
                            <li>@Html.ActionLink("Products", "Index", "Products")</li>
                            <li>@Html.ActionLink("Areas", "Index", "Areas")</li>
                            <li>@Html.ActionLink("DSRs", "Index", "Dsrs")</li>
                            <li>@Html.ActionLink("Retailers", "Index", "Customers")</li>
                            <li>@Html.ActionLink("SRs", "Index", "Srs")</li>
                            <li>@Html.ActionLink("Expense Heads", "Index", "ExpenseHeads")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Sales Register", "Index", "SalesRegisters")</li>
                    <li>@Html.ActionLink("Collections", "Index", "Collections")</li>
                    <li>@Html.ActionLink("Expenses", "Index", "Expenses")</li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Reports <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Sales Register Collection Summary Report", "SaleRegisterWiseCollectionSummaryReport", "Report")</li>
                            <li>@Html.ActionLink("Company Wise Expenditure Report", "CompanyWiseExpenseReport", "Report")</li>
                            <li>@Html.ActionLink("Retailers Report", "CustomerDetailsReport", "Report")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - C&E Distributor Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
